{% extends "base.html.twig" %}
{#
    On crée la structure de nos pages web sur le fichier base.html.twig et ensuite on peut l'hériter sur les vues de nos routes grâce à extends, entre quote on doit définir le nom du fichier depuis la racine du dossier templates

    On hérite de l'intégralité de la structure HTML
    Pour y placer avec précision du contenu, on utiliser les blocks
#}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/catalog.css') }}">
{% endblock %}

{% block title %}E-commerce | Consulter nos produits{% endblock %}

{% block h1 %}Catalogue{% endblock %}

{% block body %}


    <div class="row">
    
        {% for product in products %}


            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="shadow m-4 p-4 text-center">

                    <h2 class="fs-4">{{ product.title|capitalize }}</h2>

                    {% if product.picture %}
                        <img src="{{ asset('images/product/' ~  product.picture ) }}" alt="" class="w-100">
                    {% else %}
                        <img src="{{ asset('images/jewerly.webp' ) }}" alt="" class="w-100">
                    {% endif %}

                    <p class="text-end fs-5">{{ product.price }} €</p>

                    <a class="btn btn-dark w-100" href="{{ path('app_catalog_product', {'id' : product.id }) }}">En savoir +</a>
                
                </div>
            </div>
            
        {% endfor %}
    
    
    </div>

    
{% endblock %}






