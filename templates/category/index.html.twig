{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block h1 %}Gestion des catégories ({{ categories|length }}){% endblock %}

{% block body %}

    <a class="btn btn-dark" href="{{ path('app_category_new') }}">Ajouter une catégorie</a>


    <table class="table table-hover table-striped table-bordered text-center mt-3">

        <thead class="table-primary">
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td class="w-25">{{ category.id }}</td>
                <td class="w-50">{{ category.title|capitalize }}</td>
                <td class="w-25">
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="text-decoration-none">
                    {{ ux_icon('lucide:file', {'class': 'icon25 text-warning'}) }}
                    </a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="text-decoration-none">
                    {{ ux_icon('lucide:edit', {'class': 'icon25 text-primary'}) }}
                    </a>
                    {{ include('category/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
